<div class="row mt-4">
  <div class="col-2">
    <%= link_to "Back", todos_path, class:'btn btn-secondary' %>
  </div>
<div>
<div class="row justify-content-center set-margin">
    <div class="col_10">
      <%= render 'errors'%>
      <div class="row justify-content-center">
        <%= form_with model: @todo, class:'shadow p-4 mb-5 bg-info rounded', local: true do |f| %>
          <div class="form-group row ">
            <%= f.label :task, class:"form-label col-2 text-white" %>
            <div class="col-10">
              <%= f.text_field :task, class:"form-control shadow rounded", placeholder: 'Enter a new task' %>
            </div>
          </div>
          <div class="form-group row justify-content-center mt-4">
            <%= f.submit class:'btn btn-outline-light btn-lg col-2' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
